# Video Analysis MCP Remote Server Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=8080
NODE_ENV=production

# Google Gemini API Configuration (Required)
GOOGLE_API_KEY=your-google-api-key-here

# Authentication Configuration
# Set to false to disable authentication completely (useful for development or trusted networks)
ENABLE_AUTH=true

# Option 1: Simple API Key Authentication
API_KEY=your-secure-api-key-here

# Option 2: JWT Authentication
JWT_SECRET=your-very-secure-jwt-secret-change-this
AUTH_USERNAME=admin
# Generate password hash with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
AUTH_PASSWORD_HASH=$2a$10$YourHashedPasswordHere

# CORS Configuration
ENABLE_CORS=true
# Use specific origins in production, e.g., https://your-frontend.com
CORS_ORIGIN=*

# Rate Limiting (optional, defaults are usually fine)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
# MAX_FILE_SIZE=104857600  # 100MB in bytes

# Logging
# LOG_LEVEL=info
# LOG_DIR=/tmp/video-analysis-mcp-logs

# Temp Directory for uploads
# TEMP_DIR=/tmp/video-analysis-uploads
